jQuery(document).ready(function() {
    jQuery("#intake-begin").datepicker({ dateFormat: "yy-mm-dd" });
    jQuery("#intake-end").datepicker({ dateFormat: "yy-mm-dd" });
});

var currentWrapper = null;

/**
 *  Change the context of the rich text box.
 */
function changeTextbox(slug) {
    if (currentWrapper) {
        currentWrapper.hide();
    }

    currentWrapper = jQuery("#" + slug + "-textbox-wrapper");
    currentWrapper.show();
    return false;
}